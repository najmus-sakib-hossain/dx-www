{
    "name": "dx",
    "version": "0.0.1",
    "title": "Enhanced Developing Experience",
    "description": "Orchestrate don't just own your code",
    "author": "essensefromexistence",
    "license": "MIT OR Apache-2.0",
    "stack": [
        {
            "language": "javascript/typescript",
            "runtime": "bun",
            "compiler": "tsc",
            "bundler": "dx-js",
            "packageManager": "dx-pkg",
            "framework": "react"
        },
        {
            "language": "python",
            "runtime": "cpython",
            "compiler": null,
            "bundler": null,
            "packageManager": "uv",
            "framework": "django"
        },
        {
            "language": "rust",
            "runtime": "native",
            "compiler": "rustc",
            "bundler": null,
            "packageManager": "cargo",
            "framework": "axum"
        }
    ],
    "forge": {
        "repository": "https://dx.vercel.app/essensefromexistence/dx",
        "container": "docker",
        "registry": "ghcr.io/essensefromexistence/dx",
        "ci": "github-actions",
        "cd": "vercel",
        "cache": {
            "path": ".dx/cache",
            "strategy": "content-hash",
            "r2_bucket": "dx-cache",
            "max_size": "10GB",
            "warm_start": true
        },
        "items": [
            "cli",
            "docs",
            "examples",
            "packages",
            "scripts",
            "style",
            "tests"
        ],
        "tasks": [
            "build",
            "test",
            "lint",
            "format",
            "check",
            "deploy",
            "bench"
        ]
    },
    "runtime": {
        "engine": "dx-js-runtime",
        "target": "es2024",
        "modules": "esm",
        "sourcemap": true,
        "minify": true
    },
    "bundler": {
        "engine": "dx-js-bundler",
        "entry": "src/main.tsx",
        "outdir": "dist",
        "splitting": true,
        "treeshake": true,
        "cache_dir": ".dx/bundler"
    },
    "package": {
        "engine": "dx-pkg",
        "lockfile": "dx.lock",
        "cache_dir": ".dx/node_modules",
        "registry": "https://registry.npmjs.org",
        "binary_cache": true,
        "dedup": true
    },
    "test": {
        "engine": "dx-test",
        "pattern": "**/*.{test,spec}.{ts,tsx,js,jsx}",
        "coverage": true,
        "parallel": true,
        "cache_dir": ".dx/test"
    },
    "style": {
        "path": "@/style",
        "engine": "dx-style",
        "cache_dir": ".dx/style",
        "engines": [
            "atomic",
            "enhanced",
            "logical"
        ],
        "themes": [
            "dx",
            "vercel",
            "claude",
            "github"
        ]
    },
    "icon": {
        "path": "@/components/icons",
        "pack": "lucide-react",
        "variant": "default",
        "cache_dir": ".dx/icon"
    },
    "font": {
        "path": "@/font",
        "default": "Inter",
        "primary": "Manrope",
        "secondary": "Roboto Mono",
        "cache_dir": ".dx/font",
        "subsetting": true,
        "preload": true
    },
    "media": {
        "images": {
            "path": "@/public/images/*",
            "optimize": true,
            "webp": true,
            "avif": true
        },
        "videos": {
            "path": "@/public/videos/*",
            "transcode": true,
            "formats": [
                "mp4",
                "webm"
            ]
        },
        "sounds": {
            "path": "@/public/sounds/*"
        },
        "assets": {
            "path": "@/public/assets/*"
        },
        "cache_dir": ".dx/media"
    },
    "i18n": {
        "locales": {
            "path": "@/locales",
            "default": "en-US",
            "fallback": "en",
            "dev": [
                "en-US"
            ],
            "prod": [
                "en-US",
                "es-ES",
                "fr-FR",
                "de-DE",
                "ja-JP",
                "zh-CN",
                "bn-BD"
            ]
        },
        "tts": {
            "path": "./ttses",
            "default": "en-US",
            "voices": [
                "en-US",
                "bn-BD"
            ]
        }
    },
    "ui": {
        "path": "@/components/ui",
        "design_system": "dx-design",
        "animations": true,
        "components": [
            "button",
            "card",
            "modal",
            "navbar",
            "footer",
            "input",
            "select",
            "table",
            "dialog",
            "tooltip"
        ]
    },
    "serializer": {
        "format": "dx-infinity",
        "human_format": "dx-human",
        "llm_format": "dx-hyper",
        "binary_format": "dx-apex",
        "cache_dir": ".dx/serializer"
    },
    "generator": {
        "templates": "@/templates",
        "output": "src/generated",
        "watch": true,
        "cache_dir": ".dx/generator"
    },
    "driven": {
        "spec_dir": "specs",
        "output": "src",
        "model": "claude-opus-4",
        "cache_dir": ".dx/driven"
    },
    "www": {
        "protocol": "htip-v1",
        "runtime": "dx-www-client",
        "ssr": "dx-www-server",
        "cache_dir": ".dx/www",
        "components": [
            "core",
            "dom",
            "morph",
            "sched",
            "state",
            "sync",
            "offline",
            "auth",
            "query",
            "form",
            "guard",
            "a11y"
        ]
    },
    "workspace": {
        "packages": [
            "frontend/www",
            "frontend/mobile",
            "backend/api",
            "packages/shared"
        ],
        "cache": ".dx/workspace",
        "editors": {
            "supported": [
                "vscode",
                "cursor",
                "windsurf",
                "vim",
                "neovim",
                "zed"
            ],
            "recommended": [
                "vscode",
                "cursor"
            ],
            "extensions": [
                "dx.dx-vscode",
                "esbenp.prettier-vscode",
                "bradlc.vscode-tailwindcss"
            ]
        },
        "cloud": [
            "gitpod",
            "github-codespace",
            "replit",
            "firebase-studio",
            "stackblitz"
        ]
    },
    "security": {
        "signing": "ed25519",
        "audit": true,
        "xss_protection": "compile-time",
        "csp": "strict"
    },
    "deploy": {
        "provider": "vercel",
        "region": "auto",
        "edge": true
    }
}