{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DX Config",
  "scopeName": "source.dx",
  "patterns": [
    { "include": "#comment" },
    { "include": "#object" },
    { "include": "#array" },
    { "include": "#table" },
    { "include": "#value" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.dx",
          "match": "//.*$"
        },
        {
          "name": "comment.block.dx",
          "begin": "!",
          "end": "!",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.dx" } },
          "endCaptures": { "0": { "name": "punctuation.definition.comment.dx" } }
        }
      ]
    },
    "object": {
      "patterns": [
        {
          "name": "entity.name.tag.dx",
          "match": "^[a-zA-Z_][a-zA-Z0-9_.]*(?=\\s|#|@|$)"
        },
        {
          "name": "punctuation.separator.dx",
          "match": "#"
        },
        {
          "name": "variable.other.property.dx",
          "match": "(?<=#)[a-zA-Z_][a-zA-Z0-9_]*(?=:)"
        },
        {
          "name": "keyword.operator.inheritance.dx",
          "match": "\\^"
        }
      ]
    },
    "array": {
      "patterns": [
        {
          "name": "keyword.operator.array.dx",
          "match": "@\\d*"
        },
        {
          "name": "punctuation.separator.array.dx",
          "match": "\\|"
        },
        {
          "name": "punctuation.definition.array.dx",
          "match": ">"
        }
      ]
    },
    "table": {
      "patterns": [
        {
          "name": "punctuation.separator.table.dx",
          "match": "\\^"
        },
        {
          "name": "keyword.operator.table.dx",
          "match": "="
        }
      ]
    },
    "value": {
      "patterns": [
        {
          "name": "string.quoted.double.dx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.dx", "match": "\\\\." }
          ]
        },
        {
          "name": "constant.numeric.dx",
          "match": "-?\\d+(\\.\\d+)?"
        },
        {
          "name": "constant.language.boolean.true.dx",
          "match": "\\b(true|yes|\\+)\\b"
        },
        {
          "name": "constant.language.boolean.false.dx",
          "match": "\\b(false|no|-)\\b"
        },
        {
          "name": "constant.language.null.dx",
          "match": "(~|\\bnull\\b|\\bnone\\b)"
        },
        {
          "name": "variable.other.reference.dx",
          "match": "(\\*\\d+|ref\\(\\d+\\))"
        },
        {
          "name": "punctuation.separator.colon.dx",
          "match": ":"
        }
      ]
    }
  }
}
