{
  "name": "dx-serializer",
  "displayName": "DX Serializer",
  "description": "World-record serialization format: Beautiful for Humans, Token-efficient for LLMs, Blazing binary for Machines.",
  "version": "1.0.0",
  "publisher": "dx-www",
  "icon": "media/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/dx-www/dx"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "dx",
    "serializer",
    "config",
    "llm",
    "binary"
  ],
  "activationEvents": [
    "onFileSystem:dx-hologram"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dx",
        "aliases": ["DX Config", "dx"],
        "filenames": ["dx"],
        "icon": {
          "light": "./media/file-extension-dark.png",
          "dark": "./media/file-extension-dark.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dx",
        "scopeName": "source.dx",
        "path": "./syntaxes/dx.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "dx-icons",
        "label": "DX Icons",
        "path": "./icons/dx-icon-theme.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "variable.other.property.dx",
            "settings": { "foreground": "#7DD3FC", "fontStyle": "" }
          },
          {
            "scope": "entity.name.namespace.dx",
            "settings": { "foreground": "#C4B5FD", "fontStyle": "" }
          },
          {
            "scope": "support.type.property-name.dx",
            "settings": { "foreground": "#93C5FD", "fontStyle": "" }
          },
          {
            "scope": "entity.name.function.dx",
            "settings": { "foreground": "#FDE047", "fontStyle": "" }
          },
          {
            "scope": "entity.name.type.class.dx",
            "settings": { "foreground": "#A78BFA", "fontStyle": "bold" }
          },
          {
            "scope": "keyword.operator.arrow.dx",
            "settings": { "foreground": "#FB923C", "fontStyle": "" }
          },
          {
            "scope": "keyword.operator.separator.dx",
            "settings": { "foreground": "#F472B6", "fontStyle": "" }
          },
          {
            "scope": "keyword.control.dx",
            "settings": { "foreground": "#F472B6", "fontStyle": "" }
          },
          {
            "scope": "punctuation.separator.colon.dx",
            "settings": { "foreground": "#6EE7B7", "fontStyle": "" }
          },
          {
            "scope": "punctuation.accessor.dx",
            "settings": { "foreground": "#9CA3AF", "fontStyle": "" }
          },
          {
            "scope": "string.other.link.dx",
            "settings": { "foreground": "#38BDF8", "fontStyle": "underline" }
          },
          {
            "scope": "string.interpolated.dx",
            "settings": { "foreground": "#34D399", "fontStyle": "" }
          },
          {
            "scope": "string.unquoted.dx",
            "settings": { "foreground": "#FCD34D", "fontStyle": "" }
          },
          {
            "scope": "string.quoted.double.dx",
            "settings": { "foreground": "#A3E635", "fontStyle": "" }
          },
          {
            "scope": "constant.numeric.dx",
            "settings": { "foreground": "#F9A8D4", "fontStyle": "" }
          },
          {
            "scope": "constant.language.boolean.true.dx",
            "settings": { "foreground": "#4ADE80", "fontStyle": "" }
          },
          {
            "scope": "constant.language.boolean.false.dx",
            "settings": { "foreground": "#FB7185", "fontStyle": "" }
          },
          {
            "scope": "constant.language.null.dx",
            "settings": { "foreground": "#94A3B8", "fontStyle": "italic" }
          },
          {
            "scope": "keyword.other.special.dx",
            "settings": { "foreground": "#E879F9", "fontStyle": "bold" }
          },
          {
            "scope": "entity.name.tag.dx",
            "settings": { "foreground": "#F472B6", "fontStyle": "" }
          },
          {
            "scope": "variable.other.constant.dx",
            "settings": { "foreground": "#FCD34D", "fontStyle": "" }
          },
          {
            "scope": "comment.line.number-sign.dx",
            "settings": { "foreground": "#64748B", "fontStyle": "italic" }
          },
          {
            "scope": "comment.line.double-slash.dx",
            "settings": { "foreground": "#64748B", "fontStyle": "italic" }
          }
        ]
      }
    },
    "configuration": {
      "title": "DX Hologram",
      "properties": {
        "dx.hologram.autoInflate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show beautiful human format when opening dx files"
        },
        "dx.hologram.indentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation in pretty mode"
        },
        "dx.hologram.useUnicode": {
          "type": "boolean",
          "default": true,
          "description": "Use Unicode symbols (✓/✗) for booleans"
        },
        "dx.hologram.useBoxDrawing": {
          "type": "boolean",
          "default": true,
          "description": "Use box-drawing characters for tables"
        },
        "dx.forge.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start Forge daemon when opening workspace"
        },
        "dx.forge.autoBuild": {
          "type": "boolean",
          "default": true,
          "description": "Automatically build binary (.dxs) on save"
        }
      }
    },
    "commands": [
      {
        "command": "dx.openHologram",
        "title": "DX: Open as Human-Readable View",
        "icon": "$(eye)"
      },
      {
        "command": "dx.showLLMFormat",
        "title": "DX: Show LLM-Dense Format",
        "icon": "$(file-code)"
      },
      {
        "command": "dx.buildBinary",
        "title": "DX: Build Binary (.dxs)",
        "icon": "$(package)"
      },
      {
        "command": "dx.startForge",
        "title": "DX: Start Forge Daemon",
        "icon": "$(flame)"
      },
      {
        "command": "dx.stopForge",
        "title": "DX: Stop Forge Daemon",
        "icon": "$(debug-stop)"
      },
      {
        "command": "dx.convertFromJson",
        "title": "DX: Convert JSON to DX",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "dx.normalizeFormat",
        "title": "DX: Normalize Format",
        "icon": "$(refresh)"
      },
      {
        "command": "dx.convertAllFiles",
        "title": "DX: Convert All DX Files & Build Binaries",
        "icon": "$(files)"
      },
      {
        "command": "dx.convertCurrentFile",
        "title": "DX: Convert Current File & Build Binary",
        "icon": "$(file-binary)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dx.openHologram",
          "when": "resourceFilename == dx",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "dx.showLLMFormat",
          "when": "resourceFilename == dx",
          "group": "navigation"
        },
        {
          "command": "dx.buildBinary",
          "when": "resourceFilename == dx",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {}
}
