{
  "name": "dx-serializer",
  "displayName": "DX Serializer",
  "description": "World-record serialization format: Beautiful for Humans, Token-efficient for LLMs, Blazing binary for Machines.",
  "version": "1.0.0",
  "publisher": "dx-www",
  "icon": "media/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/dx-www/dx"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "dx",
    "serializer",
    "config",
    "llm",
    "binary"
  ],
  "activationEvents": [
    "onLanguage:dx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dx",
        "aliases": ["DX Config", "dx"],
        "filenames": ["dx"],
        "icon": {
          "light": "./media/file-extension-dark.png",
          "dark": "./media/file-extension-dark.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dx",
        "scopeName": "source.dx",
        "path": "./syntaxes/dx.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "dx-icons",
        "label": "DX Icons",
        "path": "./icons/dx-icon-theme.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "variable.other.readwrite.dx",
            "settings": { "foreground": "#00FFFF", "fontStyle": "bold" }
          },
          {
            "scope": "variable.other.property.dx",
            "settings": { "foreground": "#00E5FF", "fontStyle": "" }
          },
          {
            "scope": "entity.name.namespace.dx",
            "settings": { "foreground": "#FF00FF", "fontStyle": "bold" }
          },
          {
            "scope": "support.type.property-name.dx",
            "settings": { "foreground": "#87CEEB", "fontStyle": "" }
          },
          {
            "scope": "entity.name.function.dx",
            "settings": { "foreground": "#FFFF00", "fontStyle": "bold" }
          },
          {
            "scope": "entity.name.function.child.dx",
            "settings": { "foreground": "#FFD700", "fontStyle": "" }
          },
          {
            "scope": "entity.name.class.dx",
            "settings": { "foreground": "#DA70D6", "fontStyle": "bold" }
          },
          {
            "scope": "keyword.operator.arrow.dx",
            "settings": { "foreground": "#FF4500", "fontStyle": "bold" }
          },
          {
            "scope": "keyword.operator.pipe.dx",
            "settings": { "foreground": "#FF1493", "fontStyle": "bold" }
          },
          {
            "scope": "keyword.control.caret.dx",
            "settings": { "foreground": "#FF69B4", "fontStyle": "" }
          },
          {
            "scope": "punctuation.separator.key-value.dx",
            "settings": { "foreground": "#00FF7F", "fontStyle": "bold" }
          },
          {
            "scope": "punctuation.accessor.dx",
            "settings": { "foreground": "#FFD700", "fontStyle": "bold" }
          },
          {
            "scope": "markup.underline.link.dx",
            "settings": { "foreground": "#1E90FF", "fontStyle": "underline" }
          },
          {
            "scope": "string.interpolated.dx",
            "settings": { "foreground": "#32CD32", "fontStyle": "" }
          },
          {
            "scope": "string.unquoted.dx",
            "settings": { "foreground": "#FFA500", "fontStyle": "" }
          },
          {
            "scope": "string.unquoted.array-item.dx",
            "settings": { "foreground": "#FFB347", "fontStyle": "" }
          },
          {
            "scope": "string.unquoted.table-cell.dx",
            "settings": { "foreground": "#98D8C8", "fontStyle": "" }
          },
          {
            "scope": "string.quoted.double.dx",
            "settings": { "foreground": "#ADFF2F", "fontStyle": "" }
          },
          {
            "scope": "string.regexp.dx",
            "settings": { "foreground": "#FF6347", "fontStyle": "" }
          },
          {
            "scope": "constant.numeric.dx",
            "settings": { "foreground": "#FF69B4", "fontStyle": "" }
          },
          {
            "scope": "constant.numeric.version.dx",
            "settings": { "foreground": "#FF6EC7", "fontStyle": "" }
          },
          {
            "scope": "constant.language.boolean.true.dx",
            "settings": { "foreground": "#00FF00", "fontStyle": "bold" }
          },
          {
            "scope": "constant.language.boolean.false.dx",
            "settings": { "foreground": "#FF4444", "fontStyle": "bold" }
          },
          {
            "scope": "constant.language.null.dx",
            "settings": { "foreground": "#A0A0A0", "fontStyle": "italic" }
          },
          {
            "scope": "constant.language.placeholder.dx",
            "settings": { "foreground": "#808080", "fontStyle": "" }
          },
          {
            "scope": "keyword.other.all.dx",
            "settings": { "foreground": "#FF00FF", "fontStyle": "bold" }
          },
          {
            "scope": "entity.name.tag.dx",
            "settings": { "foreground": "#FF69B4", "fontStyle": "" }
          },
          {
            "scope": "comment.line.number-sign.dx",
            "settings": { "foreground": "#6A9955", "fontStyle": "italic" }
          },
          {
            "scope": "comment.line.double-slash.dx",
            "settings": { "foreground": "#6A9955", "fontStyle": "italic" }
          }
        ]
      }
    },
    "configuration": {
      "title": "DX Hologram",
      "properties": {
        "dx.hologram.autoInflate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show beautiful human format when opening dx files"
        },
        "dx.hologram.indentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation in pretty mode"
        },
        "dx.hologram.useUnicode": {
          "type": "boolean",
          "default": true,
          "description": "Use Unicode symbols (✓/✗) for booleans"
        },
        "dx.hologram.useBoxDrawing": {
          "type": "boolean",
          "default": true,
          "description": "Use box-drawing characters for tables"
        },
        "dx.forge.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start Forge daemon when opening workspace"
        },
        "dx.forge.autoBuild": {
          "type": "boolean",
          "default": true,
          "description": "Automatically build binary (.dxs) on save"
        }
      }
    },
    "commands": [
      {
        "command": "dx.formatPretty",
        "title": "DX: Format as Human-Readable (Pretty)",
        "icon": "$(eye)"
      },
      {
        "command": "dx.formatDense",
        "title": "DX: Format as LLM-Optimized (Dense)",
        "icon": "$(file-code)"
      },
      {
        "command": "dx.openHologram",
        "title": "DX: Open as Human-Readable View",
        "icon": "$(eye)"
      },
      {
        "command": "dx.showLLMFormat",
        "title": "DX: Show LLM-Dense Format",
        "icon": "$(file-code)"
      },
      {
        "command": "dx.buildBinary",
        "title": "DX: Build Binary (.dxs)",
        "icon": "$(package)"
      },
      {
        "command": "dx.startForge",
        "title": "DX: Start Forge Daemon",
        "icon": "$(flame)"
      },
      {
        "command": "dx.stopForge",
        "title": "DX: Stop Forge Daemon",
        "icon": "$(debug-stop)"
      },
      {
        "command": "dx.convertFromJson",
        "title": "DX: Convert JSON to DX",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "dx.normalizeFormat",
        "title": "DX: Normalize Format",
        "icon": "$(refresh)"
      },
      {
        "command": "dx.convertAllFiles",
        "title": "DX: Convert All DX Files & Build Binaries",
        "icon": "$(files)"
      },
      {
        "command": "dx.convertCurrentFile",
        "title": "DX: Convert Current File & Build Binary",
        "icon": "$(file-binary)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dx.openHologram",
          "when": "resourceFilename == dx",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "dx.showLLMFormat",
          "when": "resourceFilename == dx",
          "group": "navigation"
        },
        {
          "command": "dx.buildBinary",
          "when": "resourceFilename == dx",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {}
}
