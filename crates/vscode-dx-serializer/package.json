{
  "name": "vscode-dx-serializer",
  "displayName": "DX Serializer",
  "description": "Seamless editing of .dx files with human-readable display and dense storage",
  "version": "0.1.0",
  "publisher": "dx-runtime",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "dx",
    "serializer",
    "format",
    "llm",
    "token-efficient"
  ],
  "icon": "media/logo.png",
  "activationEvents": [
    "onFileSystem:dxlens",
    "onLanguage:dx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dx",
        "aliases": [
          "DX",
          "dx"
        ],
        "extensions": [
          ".dx"
        ],
        "filenames": [
          "dx"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/file-extension-light.png",
          "dark": "./media/file-extension-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "dx",
        "scopeName": "source.dx",
        "path": "./syntaxes/dx.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "dx.refreshFromDisk",
        "title": "DX: Refresh from Disk",
        "icon": "$(refresh)"
      },
      {
        "command": "dx.forceSave",
        "title": "DX: Force Save"
      },
      {
        "command": "dx.showDenseView",
        "title": "DX: Show Dense View"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "dx.refreshFromDisk",
          "when": "resourceExtname == .dx || resourceFilename == dx",
          "group": "navigation"
        }
      ]
    },
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "support.type.property-name.dx",
            "settings": {
              "foreground": "#F44747",
              "fontStyle": ""
            }
          },
          {
            "scope": "string.quoted.double.dx",
            "settings": {
              "foreground": "#6A9955",
              "fontStyle": ""
            }
          },
          {
            "scope": "string.unquoted.dx",
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": ""
            }
          },
          {
            "scope": "string.other.link.dx",
            "settings": {
              "foreground": "#4FC1FF",
              "fontStyle": ""
            }
          },
          {
            "scope": "markup.underline.link.dx",
            "settings": {
              "foreground": "#3794FF",
              "fontStyle": "underline"
            }
          },
          {
            "scope": "constant.numeric.dx",
            "settings": {
              "foreground": "#B5CEA8",
              "fontStyle": ""
            }
          },
          {
            "scope": "constant.numeric.version.dx",
            "settings": {
              "foreground": "#DCDCAA",
              "fontStyle": ""
            }
          },
          {
            "scope": "constant.language.boolean.dx",
            "settings": {
              "foreground": "#569CD6",
              "fontStyle": ""
            }
          },
          {
            "scope": "constant.language.null.dx",
            "settings": {
              "foreground": "#808080",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "entity.name.tag.dx",
            "settings": {
              "foreground": "#C586C0",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "punctuation.separator.pipe.dx",
            "settings": {
              "foreground": "#D4D4D4",
              "fontStyle": ""
            }
          },
          {
            "scope": "punctuation.separator.key-value.dx",
            "settings": {
              "foreground": "#D4D4D4",
              "fontStyle": ""
            }
          },
          {
            "scope": "comment.line.double-slash.dx",
            "settings": {
              "foreground": "#6A9955",
              "fontStyle": "italic"
            }
          }
        ]
      }
    },
    "configuration": {
      "title": "DX Serializer",
      "properties": {
        "dx.validateBeforeSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate syntax before saving .dx files"
        },
        "dx.autoSaveGracePeriod": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 10000,
          "description": "Grace period in milliseconds after last keystroke before auto-save"
        },
        "dx.indentSize": {
          "type": "number",
          "enum": [
            2,
            4
          ],
          "default": 2,
          "description": "Indent size for human-readable format (2 or 4 spaces)"
        },
        "dx.showDensePreview": {
          "type": "boolean",
          "default": false,
          "description": "Show dense format preview on hover"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.55.0",
    "fast-check": "^3.14.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {}
}