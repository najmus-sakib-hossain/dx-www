{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DX",
  "scopeName": "source.dx",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#sections" },
    { "include": "#keys" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.dx",
          "match": "//.*$"
        },
        {
          "name": "comment.block.dx",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.anchor.dx",
          "match": "!([^!]*)!"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.dx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.dx",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.dx",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.dx",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.scientific.dx",
          "match": "\\b[0-9]+\\.?[0-9]*[eE][+-]?[0-9]+\\b"
        },
        {
          "name": "constant.numeric.float.dx",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.dx",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.base62.dx",
          "match": "%[0-9a-zA-Z]+"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.dx",
          "match": "\\b(true|True|TRUE|yes|Yes|YES)\\b|\\+|\\u2713"
        },
        {
          "name": "constant.language.boolean.false.dx",
          "match": "\\b(false|False|FALSE|no|No|NO)\\b|-|\\u2717"
        },
        {
          "name": "constant.language.null.dx",
          "match": "\\b(null|Null|NULL|none|None|NONE)\\b|~|\\u2014"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.dx",
          "match": ":"
        },
        {
          "name": "keyword.operator.separator.dx",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.hash.dx",
          "match": "#"
        },
        {
          "name": "keyword.operator.caret.dx",
          "match": "\\^"
        },
        {
          "name": "keyword.operator.at.dx",
          "match": "@"
        },
        {
          "name": "keyword.operator.arrow.dx",
          "match": ">|\\u2192"
        },
        {
          "name": "keyword.operator.reference.dx",
          "match": "\\*"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.bracket.curly.dx",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.bracket.square.dx",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.bracket.round.dx",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.comma.dx",
          "match": ","
        },
        {
          "name": "punctuation.definition.bullet.dx",
          "match": "\\u2022|\\u00B7"
        }
      ]
    },
    "sections": {
      "patterns": [
        {
          "name": "markup.heading.section.dx",
          "match": "^\\s*(\\u25BC|\\u25BE|>)\\s+(.+)$",
          "captures": {
            "1": { "name": "punctuation.definition.section.dx" },
            "2": { "name": "entity.name.section.dx" }
          }
        }
      ]
    },
    "keys": {
      "patterns": [
        {
          "name": "variable.other.key.dx",
          "match": "^\\s*([\\w\\-\\.]+)\\s*(?=:)",
          "captures": {
            "1": { "name": "entity.name.tag.dx" }
          }
        },
        {
          "name": "variable.other.inherited.dx",
          "match": "\\^([\\w\\-\\.]+)",
          "captures": {
            "1": { "name": "entity.name.tag.inherited.dx" }
          }
        }
      ]
    }
  }
}
