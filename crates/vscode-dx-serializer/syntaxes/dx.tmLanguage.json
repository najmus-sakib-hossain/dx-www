{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DX",
  "scopeName": "source.dx",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#section-headers"
    },
    {
      "include": "#key-value-pairs"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#null-values"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#paths"
    },
    {
      "include": "#llm-format"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.dx",
          "match": "//.*$"
        }
      ]
    },
    "section-headers": {
      "patterns": [
        {
          "name": "meta.section.dx",
          "match": "^(\\[[a-zA-Z0-9_.]+\\])",
          "captures": {
            "1": {
              "name": "entity.name.section.dx"
            }
          }
        }
      ]
    },
    "key-value-pairs": {
      "patterns": [
        {
          "match": "^([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
          "captures": {
            "1": {
              "name": "variable.other.property.dx"
            },
            "2": {
              "name": "keyword.operator.assignment.dx"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.dx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.dx",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.dx",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.dx",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.version.dx",
          "match": "(?<==\\s*)[0-9]+\\.[0-9]+\\.[0-9]+"
        },
        {
          "name": "constant.numeric.float.dx",
          "match": "(?<==\\s*)[0-9]+\\.[0-9]+"
        },
        {
          "name": "constant.numeric.integer.dx",
          "match": "(?<==\\s*)[0-9]+"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.dx",
          "match": "(?<==\\s*)(true|True|TRUE|yes|Yes|YES)(?=\\s|$|\\|)"
        },
        {
          "name": "constant.language.boolean.false.dx",
          "match": "(?<==\\s*)(false|False|FALSE|no|No|NO)(?=\\s|$|\\|)"
        }
      ]
    },
    "null-values": {
      "patterns": [
        {
          "name": "constant.language.null.dx",
          "match": "(?<==\\s*)(null|none|None|NONE|-|all|All|ALL)(?=\\s|$|\\|)"
        }
      ]
    },
    "paths": {
      "patterns": [
        {
          "name": "string.other.link.dx",
          "match": "@/[a-zA-Z0-9_/.-]+"
        },
        {
          "name": "string.other.link.dx",
          "match": "https?://[^\\s|]+"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "punctuation.separator.pipe.dx",
          "match": "\\|"
        }
      ]
    },
    "llm-format": {
      "patterns": [
        {
          "name": "keyword.control.context.dx",
          "match": "^#c:.*$"
        },
        {
          "name": "keyword.control.reference.dx",
          "match": "^#:.*$"
        },
        {
          "name": "keyword.control.section.dx",
          "match": "^#[a-zA-Z]\\([^)]+\\)$"
        }
      ]
    }
  }
}